{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "develop",
            "type": "npm",
            "script": "develop",
            "problemMatcher": [
                "$eslint-stylish"
            ],
            "group": "build"
        },
        {
            "label": "build",
            "type": "npm",
            "script": "build --prefix-paths",
            "problemMatcher": [
                "$eslint-stylish"
            ],
            "group": "build"
        },
        {
            "label": "serve",
            "type": "npm",
            "script": "serve",
            "problemMatcher": [
                "$eslint-stylish"
            ]
        }
    ]
}